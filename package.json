{
    "name": "@d1vij/jassm",
    "description": "Just another static site maker. Create simple content driven sites using MDX and React along with Typescript safety.",
    "version": "0.1.5",
    "type": "module",
    "files": [
        "dist"
    ],
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            }
        },
        "./plugin": {
            "import": "./dist/vitePlugin.js",
            "types": "./dist/vitePlugin.d.ts"
        },
        "./package.json": "./package.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/d1vij/jassm.git"
    },
    "homepage": "https://github.com/d1vij/jassm",
    "license": "MIT",
    "sideEffects": false,
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "bunup",
        "dev:ui": "cd test/ui && vite",
        "dev": "bunup --watch",
        "prepare": "bun simple-git-hooks",
        "type-check": "tsc --noEmit",
        "prepack": "bun run build",
        "release": "bumpp --commit --push --tag",
        "lint": "biome check --fix && tsc -b",
        "format": "biome format --write"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.4.4",
        "@types/bun": "^1.3.9",
        "@types/mdx": "^2.0.13",
        "@types/react": "^19.2.14",
        "@types/react-dom": "^19.2.3",
        "bumpp": "^10.4.1",
        "bunup": "^0.16.29",
        "simple-git-hooks": "^2.13.1",
        "typescript": "^5.9.3"
    },
    "peerDependencies": {
        "@mdx-js/rollup": "^3.1.1",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "remark-gfm": "^4.0.1",
        "typescript": ">=4.5.0",
        "vite": "^7.3.1"
    },
    "peerDependenciesMeta": {
        "typescript": {
            "optional": true
        }
    },
    "dependencies": {
        "@d1vij/shit-i-always-use": "^0.1.3"
    },
    "simple-git-hooks": {
        "pre-commit": "bun run lint && bun run type-check"
    }
}
